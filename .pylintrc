# This is a configuration file for pylint.
# By placing this file in your project's root directory, you can customize
# which warnings and errors pylint shows.

[MESSAGES CONTROL]

# Add the message IDs or names you want to disable here.
# This will turn off the "annoying" suggestions you mentioned.
disable=
    # Documentation related
    missing-module-docstring,  # C0114: Missing module docstring
    missing-class-docstring,   # C0115: Missing class docstring
    missing-function-docstring, # C0116: Missing function or method docstring

    # Naming conventions
    invalid-name,              # C0103: Variable name doesn't conform to snake_case, etc.

    # Code length and complexity
    line-too-long,             # C0301: Line too long
    too-many-arguments,        # R0913: Too many arguments for a function
    too-many-locals,           # R0914: Too many local variables in a function
    too-many-statements,       # R0915: Too many statements in a function
    too-few-public-methods,    # R0903: Class has too few public methods

    # Logging related
    logging-fstring-interpolation, # W1203: Use lazy % formatting instead of f-string
    logging-too-many-args,         # E1205: Too many arguments for logging format string
    logging-format-interpolation,  # W1202: Use lazy % formatting

[FORMAT]

# You can optionally increase the max line length instead of disabling the check.
# The default is 100.
max-line-length=120